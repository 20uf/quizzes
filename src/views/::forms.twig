{% extends 'form_div_layout.html.twig' %}

{% block form_row %}
{% spaceless %}
     <div class="control-group {% if errors|length > 0 %}error{% endif %}">
        {{ form_label(form) }}
         <div class="controls">
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <div class="alert alert-block alert-error fade in">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <p>{{ error.message }}</p>
            </div>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block button_row %}
{% spaceless %}
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock button_row %}